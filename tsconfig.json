{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "uuid": ["src/utils/uuid"],
      "uuid/*": ["src/utils/uuid"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
